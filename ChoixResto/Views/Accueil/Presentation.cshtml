@model ChoixResto.ViewModels.PresentationViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Presentation restaurant @Model.Restaurant.Nom</title>
    <style>
        .maClass {
            color: brown;
        }
    </style>
</head>
<body>
    <div> 
       
        <p>Voici la page de présenation du resto' @Model.Restaurant.Nom</p>
        <br/>
        <p>Nous avons ouvert le @Model.Date</p>
        <p>N'hésitez pas à nous contacter au @Model.Restaurant.Telephone</p>


        @Html.Label("participer", "Voulez-vous participer ?", new { style = "color: black" })
        @Html.CheckBox("participer", true)
        @Html.Label("textCouleur", "Affichage par classe marron", new { @Class = "maClass" })
        <br/><br/>
        @Html.DropDownList("RestoChoisi", (SelectList)ViewBag.ListeResto)<!-- selectlist -->
        <!-- HELPER FORM -->
        @{Html.BeginForm("Index", "Accueil");}
        @Html.Label("nom", "Votre nom")
        <input id="nom" maxlength="20" />
        <input type="submit" value="Envoyer" />
        @{Html.EndForm();}
        <!-- link affichage, méthode, controller, paramètre get -->
        @Html.ActionLink("Accueil", "ActionLink", "Accueil", new { id = Model.Restaurant.Id }, null)
    
    
        <!-- partial vue avec passage du modèle en paramètre -->
        @Html.Partial("Connexion", Model)
    </div>
</body>
</html>



