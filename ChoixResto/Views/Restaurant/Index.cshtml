@model List<ChoixResto.Models.Restaurant>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        table {
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <div> 
        <p>Salut</p>
        <table>
            <tr>
    
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Modifier</th>
            </tr>
            @foreach (ChoixResto.Models.Restaurant r in Model)
            {
                <tr>
                    <td>@r.Nom</td>
                    <td>@r.Telephone</td>
                    <td>@Html.ActionLink("modifier (" + @r.Id + ")", "ModifierRestaurant", "Restaurant", new { id = @r.Id}, null)
                     </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
